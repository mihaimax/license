@using StudentPortal.ViewModels
@using StudentPortal.ViewModels.Account
@model LogInViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Maxiversity</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #eafaf1, #cce8d8);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-semibold text-center text-green-700 mb-6">Login - Portal Studenți</h2>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="mb-4 text-red-600 text-sm">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="LogIn" asp-controller="Account" method="post"> 
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input name="Email" asp-for="Email" type="email" id="typeEmailX" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-400 focus:border-green-500" required />
                <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Parolă</label>
                <input name="Password" asp-for="Password" type="password" id="typePasswordX" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-400 focus:border-green-500" required />
                <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
            </div>

            <button type="submit"
                    class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-md transition duration-200">
                Logare
            </button>
        </form>
    </div>
    <partial name="_ValidationScriptsPartial" />
</body>

<style>
    body {
        background: linear-gradient(135deg, #d6f5e5, #a8dbc1);
    }
</style>