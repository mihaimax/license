@Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })

@using StudentPortal.ViewModels
@model StudentPortal.ViewModels.Admin.BulkInviteViewModel
@{
    ViewData["Title"] = "Bulk User Invitations";
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bulk User Invitations - Maxiversity</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #eafaf1, #cce8d8);
        }
    </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center">
    <!-- Upload Card -->
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-xl flex flex-col items-center mt-12">
        <h2 class="text-2xl font-semibold text-center text-green-700 mb-8">Bulk User Invitations</h2>
        <form asp-action="InviteUserBulk" asp-controller="Admin" method="post" enctype="multipart/form-data" class="w-full">
            <div class="mb-6">
                <label asp-for="ExcelFile" class="block text-sm font-medium text-gray-700 mb-2">Upload Excel File</label>
                <input name="ExcelFile" asp-for="ExcelFile" type="file" accept=".xlsx,.xls"
                       class="block w-full text-sm text-gray-700 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="ExcelFile" class="text-red-600 text-sm"></span>
                <small class="block text-gray-500 mt-1">File must contain 'Email' and 'UserType' columns.</small>
            </div>
            <button type="submit"
                    class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-md transition duration-200 text-center">
                Send Invites
            </button>
        </form>
    </div>

    <!-- Results Card -->
    @if (Model.ProcessedInvites.Any())
    {
        <div class="flex justify-center w-full mt-12">
            <div class="bg-gray-50 rounded-lg shadow p-6 w-[90vw] max-w-7xl">
                <h5 class="text-lg font-semibold text-green-700 mb-4">Processed Invitations</h5>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead>
                            <tr>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">User Type</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Message</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var invite in Model.ProcessedInvites)
                            {
                                <tr>
                                    <td class="px-4 py-2">@invite.Email</td>
                                    <td class="px-4 py-2">@invite.UserType</td>
                                    <td class="px-4 py-2">
                                        <span class="inline-block px-2 py-1 rounded-full text-xs font-semibold
                                            @(invite.IsSuccess ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                            @(invite.IsSuccess ? "Success" : "Failed")
                                        </span>
                                    </td>
                                    <td class="px-4 py-2">@invite.Message</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
