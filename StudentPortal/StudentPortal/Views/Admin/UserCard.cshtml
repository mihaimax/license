@using StudentPortal.ViewModels
@model StudentPortal.ViewModels.Admin.UserViewModel
@{
    ViewData["Title"] = "User Details";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Details - Facultatea XYZ</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #eafaf1, #cce8d8);
        }
    </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-2xl flex flex-col items-center mt-12 relative">
        <!-- Top bar with UserName and X -->
        <div class="w-full flex justify-between items-center mb-8">
            <div class="text-lg font-semibold text-green-700">
                @Model.UserName
            </div>
            <button type="button" onclick="window.history.back();"
                    class="text-gray-400 hover:text-gray-600 text-2xl font-bold focus:outline-none">
                &times;
            </button>
        </div>
        <!-- Card content -->
        <form class="w-full">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Name</label>
                    <input value="@Model.Name" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Surname</label>
                    <input value="@Model.Surname" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">City</label>
                    <input value="@Model.City" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">County</label>
                    <input value="@Model.County" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Function</label>
                    <input value="@Model.Function" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Account Status</label>
                    <input value="@Model.AccountStatus" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Address</label>
                    <input value="@Model.Address" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">CNP</label>
                    <input value="@Model.CNP" readonly class="mt-1 block w-full rounded-md border-gray-300 shadow-sm bg-gray-100" />
                </div>
            </div>
            <div class="flex justify-end gap-3 mt-8">
                <a href="javascript:window.history.back();"
                   class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-6 rounded-md transition duration-200">
                    Cancel
                </a>
                <button type="button"
                        onclick="window.history.back();"
                        class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-md transition duration-200">
                    OK
                </button>
            </div>
        </form>
    </div>
</body>
