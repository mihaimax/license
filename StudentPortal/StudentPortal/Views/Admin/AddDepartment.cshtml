@using StudentPortal.ViewModels
@model StudentPortal.ViewModels.Admin.DepartmentViewModel
@{
    ViewData["Title"] = "Add Department";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Department - Facultatea XYZ</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #eafaf1, #cce8d8);
        }
    </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-center">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-lg flex flex-col items-center mt-12">
        <h2 class="text-2xl font-semibold text-green-700 mb-6">Add Department</h2>
        <form asp-action="Add" method="post" class="w-full space-y-4">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
                <input name="DepartmentName" asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea asp-for="Description" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Code" class="block text-sm font-medium text-gray-700">Code</label>
                <input name="DepartmentCode" asp-for="Code" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Code" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Phone" class="block text-sm font-medium text-gray-700">Faculty Id</label>
                <input name="Phone" asp-for="Phone" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="Phone" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="TeacherId" class="block text-sm font-medium text-gray-700">Faculty Id</label>
                <input name="TeacherId" asp-for="TeacherId" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500" />
                <span asp-validation-for="TeacherId" class="text-red-500 text-xs"></span>
            </div>
            <div class="flex justify-end">
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-md transition duration-200">
                    Add Department
                </button>
            </div>
        </form>
    </div>
    <partial name="_ValidationScriptsPartial" />
</body>
