@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Facultatea XYZ</title>
