@using StudentPortal.ViewModels
@model StudentPortal.ViewModels.Teacher.SituatieViewModel
@{
    ViewData["Title"] = "Manage Situation";
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Situation - Maxiversity</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #eafaf1, #cce8d8);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-3xl">
        <h2 class="text-2xl font-semibold text-center text-green-700 mb-6">Manage Situation</h2>
        <form method="get" class="flex gap-4 mb-6">
            <input type="text" name="specialization" value="@Model.Specialization" placeholder="Specialization"
                   class="border rounded-md px-3 py-2 w-1/3" />
            <input type="number" name="year" value="@Model.Year" placeholder="Year"
                   class="border rounded-md px-3 py-2 w-1/3" min="0" />
            <input type="number" name="semester" value="@Model.Semester" placeholder="Semester"
                   class="border rounded-md px-3 py-2 w-1/3" min="0" />
            <button type="submit"
                    class="bg-green-500 hover:bg-green-600 text-white font-semibold px-4 py-2 rounded-md">
                Filter
            </button>
        </form>
        <table class="min-w-full bg-white">
            <thead>
                <tr>
                    <th class="py-2 px-4 border-b">Student ID</th>
                    <th class="py-2 px-4 border-b">Name</th>
                    <th class="py-2 px-4 border-b">Surname</th>
                    <th class="py-2 px-4 border-b"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td class="py-2 px-4 border-b">@student.StudentId</td>
                        <td class="py-2 px-4 border-b">@student.Name</td>
                        <td class="py-2 px-4 border-b">@student.Surname</td>
                        <td class="py-2 px-4 border-b text-right">
                            <a href="@Url.Action("ModifySituation", "Teacher", new { studentId = student.StudentId})"
                               class="bg-green-500 hover:bg-green-600 text-white font-semibold px-4 py-2 rounded-md">
                                Manage
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
