@using StudentPortal.ViewModels
@model StudentPortal.Views.Teacher.IndexModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Dashboard - Maxiversity</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #eafaf1, #cce8d8);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center">
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            alert('@TempData["ErrorMessage"]');
        </script>
    }
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-semibold text-center text-green-700 mb-6">Teacher Dashboard</h2>
        <div class="flex flex-col gap-4">
            <a href="/Teacher/ManageSituation"
               class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-md text-center transition duration-200">
                Manage Situation
            </a>
        </div>
    </div>
</body>

<style>
    body {
        background: linear-gradient(135deg, #d6f5e5, #a8dbc1);
    }
</style>
